<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_alarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="com.mola.Alarm.CreateAlarmActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headLayout"
        >
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/delete2"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cha_1"
                android:layout_gravity="center"
                android:layout_weight="0.09" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:id="@+id/ClockTextView"
            android:textColor="@color/textcolor"
            android:text="Setting"
            android:textSize="25dp"
            android:layout_weight="7"/>
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/commit2">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/gou_1"
                android:layout_gravity="center"
                android:layout_weight="0.09" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_weight="0"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:background="#313030"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_weight="0"
        android:gravity="center"
        android:background="#313030"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/sliding_text_bg"
            android:text="clock"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sliding_setting_bg"
            android:id="@+id/time_setting"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:text="时区设定"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="120"
                    android:text="北京时间"
                    android:textColor="@color/textcolor"
                    android:id="@+id/time_type"
                    android:textAlignment="textEnd"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/arrow_1"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:background="#313030"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time_mode_layout"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="闹钟耗能模式 "
                    android:textColor="@color/textcolor"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="120"
                    android:text="正常耗电"
                    android:textColor="@color/textcolor"
                    android:id="@+id/time_mode"
                    android:textAlignment="textEnd"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/arrow_1"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:background="#313030"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sliding_setting_bg"
            android:id="@+id/about"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于molamolaclock   "
                    android:textColor="@color/textcolor"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/textView5" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:background="#313030"
            />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/sliding_text_bg"
        android:text="alarm"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开启自动清除失效闹钟 "
                    android:textColor="@color/textcolor"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="120"
                     />
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/auto_clear_alarm"
                    android:layout_weight="3"
                    android:layout_marginRight="0dp"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:background="#313030"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Shake_field"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除所有关闭一次性闹钟 "
                    android:textColor="@color/textcolor"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="120"
                     />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clear_alarm"
                    android:text="clear"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:background="#313030"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personal_setting"
        android:background="@drawable/sliding_setting_bg"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置一键闹钟 "
                android:textColor="@color/textcolor"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                 />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="120"
                />
        </LinearLayout>
    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:background="#313030"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存数据 "
                android:textColor="@color/textcolor"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                 />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="120"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear_save"
                android:text="clear"/>
        </LinearLayout>
    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:background="#313030"
            />
    </LinearLayout>
</LinearLayout>